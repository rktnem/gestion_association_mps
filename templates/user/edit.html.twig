{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href={{ asset("style/app/security.css") }}>
{% endblock %}

{% block title "Gestion des utilisateurs" %}

{% block body %}
    <div class="edit-user-section d-flex flex-column gap-3 px-5 pt-3">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Modifier l'utilisateur</h3>
            <a href={{ path("user.index") }} class="btn btn-success px-4 py-1">
                Revenir
            </a>
        </div>
        <div class="px-3 py-3 rounded shadow">
            {{ form_start(form, { "attr": { "class": "row" } } ) }}
                <div class="col-lg-6 col-md-12">
                    {{ form_row(form.matricule) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.fonction) }}
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="role px-4 py-1 mb-3 rounded-2">
                        {{ form_row(form.roles) }}
                    </div>
                    {{ form_row(form.directions, { "attr": { "readonly": "readonly" } }) }}
                    {{ form_row(form.services) }}
                </div>
                <button type="submit" class="btn btn-success col-6 mx-auto py-2 px-4">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}